{
  "swagger": "2.0",
  "info": {
    "title": "Fastify API",
    "version": "1.0.0",
    "description": "Une API Fastify avec Swagger"
  },
  "host": "localhost:1605",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/": {
      "get": {
        "summary": "Page d'accueil",
        "description": "Retourne un objet JSON d'accueil",
        "responses": {
          "200": {
            "description": "Succès",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/items": {
      "get": {
        "summary": "Liste tous les items",
        "description": "Récupère une liste de tous les items",
        "responses": {
          "200": {
            "description": "Une liste des items",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer"
                  },
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Crée un nouvel item",
        "description": "Ajoute un nouvel item à la liste",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "item",
            "description": "Objet item à ajouter",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["name", "description"],
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Item créé avec succès",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
